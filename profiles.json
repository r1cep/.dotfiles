
// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation

{
    "$schema": "https://aka.ms/terminal-profiles-schema",

    // ref. https://github.com/microsoft/terminal/blob/master/doc/cascadia/SettingsSchema.md#globals
    "globals": {
        "alwaysShowTabs": false,
        "copyOnSelect": true,
        "defaultProfile": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}",
        //"launchMode": "default",
        "requestedTheme": "dark",
        //"showTerminalTitleInTitlebar": true,
        //"showTabsInTitleBar": false,
        "snapToGridOnResize": true,
        "tabWidthMode": "equal",
        "": ""
    },

    // ref. https://github.com/microsoft/terminal/blob/master/doc/cascadia/SettingsSchema.md#profiles
    "profiles": {
        "defaults": {
            // frame opacity.
            "useAcrylic": false,
            "acrylicOpacity": 0.99,

            // cursor
            "cursorColor": "#FFFFFF",
            "cursorHeight": 25,
            "cursorShape": "vintage",

            // Font
            "fontFace": "Consolas",
            //"fontFace": "Cascadia Code",
            //"fontFace": "HackGen Console for Powerline",
            //"fontFace": "HackGen35 Console for Powerline",
            //"fontFace": "Ricty",
            //"fontFace": "Ricty Diminished for Powerline",
            "fontSize": 12,

            // UI
            "padding": "8, 8, 8, 8",
            "scrollBarState": "visible",

            // ????
            //"experimental.retroTerminalEffect": true,

            // schemes
            //"background": "#000000",
            //"foreground": "#FFFFFF",
            //"selectionBackground": "#FFFFFF",
            //"colorScheme": "Campbell",
            //"colorTable": [],

            "": ""
        },

        "list": [
            {
                // Make changes here to the powershell.exe profile
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "name": "Windows PowerShell",
                "commandline": "powershell.exe",
                "hidden": false
            },
            {
                // Make changes here to the cmd.exe profile
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "name": "cmd",
                "commandline": "cmd.exe",
                "hidden": false
            },
            {
                "guid": "{c6eaf9f4-32a7-5fdc-b5cf-066e8a4b1e40}",
                "hidden": false,
                "name": "Ubuntu-18.04",
                "source": "Windows.Terminal.Wsl",

                // Starting directory settings.
                //"startingDirectory": "//wsl$/Ubuntu-18.04/home/[username]",
                "commandline": "wsl.exe ~ -d Ubuntu-18.04",

                // ref. https://github.com/microsoft/terminal/blob/master/doc/cascadia/SettingsSchema.md#background-images-and-icons
                // ref. https://github.com/microsoft/WSL/issues/1269#issuecomment-421171148
                "icon": "ms-appdata:///roaming/ubuntu.ico",

                "": ""
            },
            {
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "hidden": true,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure"
            }
        ]
    },

    // Add custom color schemes to this array
    "schemes": [],

    // Add any keybinding overrides to this array.
    // To unbind a default keybinding, set the command to "unbound"
    "keybindings": []
}
