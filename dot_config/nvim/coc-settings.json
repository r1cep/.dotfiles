{
  // Editor Setting
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Prettier
  "coc.preferences.formatOnSave": true,

  // ESLint
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.options": {
    "flags": ["unstable_native_nodejs_ts_config"]
  },
  "eslint.trace.server": "verbose",

  // Oxc
  "oxc.configPath": ".oxlintrc.json",

  // JavaScript
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Stylelint
  "stylelintplus.autoFixOnFormat": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.validateOnSave": true,

  // TypeScript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // TypeScript: TSServer
  "tsserver.enable": true,
  // TypeScript: Use typescript inside node_modules
  "tsserver.useLocalTsdk": true,
  // TypeScript: Log & Trace
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",

  "Lua.workspace.library": {
    "/opt/homebrew/share/nvim/runtime/lua": true,
    "/opt/homebrew/share/nvim/runtime/lua/vim": true,
    "/opt/homebrew/share/nvim/runtime/lua/vim/lsp": true
  },
  "Lua.diagnostics.globals": ["vim"]
}
