{
  "permissions": {
    "allow": [
      "Bash(cp:*)",
      "Bash(fd:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(pnpm fix:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm tsc:*)",
      "Bash(pnpm app:*)",
      "Bash(~/.config/claude/notify.sh:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/claude/notify.sh task_completed"
          }
        ]
      }
    ]
  }
}
