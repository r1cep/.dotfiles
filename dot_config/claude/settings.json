{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(gh:*)",
      "Bash(git mv:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(pnpm: :*)",
      "mcp__figma__get_design_context",
      "mcp__figma-desktop__get_design_context",
      "mcp__react-aria__list_react_aria_pages",
      "mcp__react-aria__get_react_aria_page",
      "mcp__typescript__list_dir"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|multiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".jsx\") or endswith(\".ts\") or endswith(\".cts\") or endswith(\".mts\") or endswith(\".tsx\")) or endswith(\".md\"))' | xargs -r npx prettier --write"
          }
        ]
      }
    ]
  },
  "language": "japanese",
  "enabledPlugins": {
    "context7-plugin@context7-marketplace": true
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}

