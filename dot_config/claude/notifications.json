{
  "notifications": {
    "confirmation_required": {
      "message": "確認が必要です",
      "sound": true,
      "urgent": true
    },
    "task_completed": {
      "message": "作業が完了しました",
      "sound": true,
      "urgent": false
    },
    "error_occurred": {
      "message": "エラーが発生しました",
      "sound": true,
      "urgent": true
    },
    "progress_update": {
      "message": "進捗更新",
      "sound": false,
      "urgent": false
    }
  },
  "environments": {
    "macos": {
      "notification_command": "osascript -e 'display notification \"{message}\" with title \"Claude Code\"'",
      "sound_command": "say \"{message}\"",
      "log_file": "~/claude-notifications.log"
    },
    "wsl2": {
      "notification_command": "powershell.exe -Command \"New-BurntToastNotification -Text '{message}'\"",
      "sound_command": "powershell.exe -Command \"Add-Type -AssemblyName System.Speech; (New-Object System.Speech.Synthesis.SpeechSynthesizer).Speak('{message}')\"",
      "log_file": "~/claude-notifications.log"
    }
  },
  "triggers": {
    "confirmation_required": [
      "複数パッケージにわたる変更前",
      "10ファイル以上の変更前",
      "セキュリティ関連の変更前",
      "API設計の変更前",
      "テストファイルの削除前",
      "依存関係の追加・削除前",
      "ビルド設定の変更前"
    ],
    "auto_notify_completion": [
      "ファイル編集完了",
      "テスト実行完了",
      "ビルド完了",
      "リント修正完了"
    ]
  }
}
